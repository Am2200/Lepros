<h4>Post details:</h4>
<p>
  <%= @post.content %>
  <br/>
  Added at <%= @post.created_at %>
</p>

<br/>

<h4>Comments:</h4>
  <br/>
  <% @comments.each do |value|%>
    <p>
      <%= value.comment %>
      <br/> <br/>
      <span style="font-size: 75%; color: #000">Added at : <%= value.created_at %></span>
    </p>
    <br/>
  <% end%>

<p>
  <form action="/details/<%= @post.id %>" method="post">
    <input type="hidden" name="comment[idPost]" value="<%= @post.id %>">
    <textarea name="comment[comment]" class="form-control" rows="6" placeholder="Type comment text here"></textarea>
    <br />
    <button type="submit" class="btn btn-default">Add comment</button>
  </form>
</p>